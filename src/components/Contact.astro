---
import CheckCircle from "./icons/CheckCircle.astro";
import ContactForm from "./ContactForm.jsx";
---

<section id="contact" class="py-10 relative overflow-hidden">
    {/* Gradient Background */}
    <div
        class="absolute inset-0 bg-gradient-to-br from-amber-50 via-orange-50 to-gray-50"
    >
    </div>
    <div
        class="absolute top-0 right-0 w-96 h-96 bg-amber-400/10 rounded-full blur-3xl"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-96 h-96 bg-orange-400/10 rounded-full blur-3xl"
    >
    </div>

    <div class="container relative z-10 mx-auto px-4 lg:px-8">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                {/* Left Column - Content */}
                <div class="space-y-8">
                    <div>
                        <div
                            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-amber-100 border border-amber-200 mb-6"
                        >
                            <span class="text-sm font-medium text-amber-900"
                                >Cotización Gratuita</span
                            >
                        </div>
                        <h2
                            class="font-title text-4xl md:text-5xl font-bold tracking-tight mb-6 text-gray-900"
                        >
                            Obtén tu cotización en <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-orange-600"
                                >en pocos minutos</span
                            >
                        </h2>
                        <p
                            class="font-body text-lg text-gray-600 leading-relaxed"
                        >
                            Completa el formulario y recibe propuestas
                            personalizadas de las mejores aseguradoras del
                            mercado.
                        </p>
                    </div>

                    {/* Benefits */}
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <div class="w-7 h-7 text-amber-600">
                                <CheckCircle />
                            </div>
                            <span class="text-gray-700"
                                >Comparación de múltiples aseguradoras</span
                            >
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="w-7 h-7 text-amber-600">
                                <CheckCircle />
                            </div>
                            <span class="text-gray-700"
                                >Asesoría personalizada sin costo</span
                            >
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="w-7 h-7 text-amber-600">
                                <CheckCircle />
                            </div>
                            <span class="text-gray-700"
                                >Respuesta en menos de 24 horas</span
                            >
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="w-7 h-7 text-amber-600">
                                <CheckCircle />
                            </div>
                            <span class="text-gray-700"
                                >Proceso 100% digital y seguro</span
                            >
                        </div>
                    </div>
                </div>

                <ContactForm client:only="react" />
            </div>
        </div>
    </div>
</section>
