---
import "../styles/global.css";
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Asesoría profesional en seguros" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- Estilos específicos para páginas legales -->
        <style>
            /* Solo aplicar fondo gris al área de contenido */
            main {
                background: #f9fafb !important;
                min-height: calc(
                    100vh - 160px
                ); /* Altura menos navbar y footer aproximados */
            }

            /* Typography */
            .font-title {
                font-family: "Poppins", sans-serif;
            }

            .font-body {
                font-family: "Inter", sans-serif;
            }

            /* Offset for fixed navbar */
            section {
                scroll-margin-top: 80px;
            }
        </style>
    </head>

    <body class="min-h-screen flex flex-col">
        <header class="sticky top-0 z-50 transition-all duration-300">
            <Navbar client:load />
        </header>

        <main class="flex-1 bg-gray-50">
            <slot />
        </main>

        <Footer />
    </body>
</html>
